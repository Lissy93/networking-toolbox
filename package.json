{
	"name": "networking-toolbox",
	"private": true,
	"version": "1.5.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint src --ext .ts,.svelte",
		"format": "prettier --check src --write",
		"types": "tsc -p tsconfig.json --noEmit",
		"build-check": "vite build --minify=false --sourcemap=false --logLevel error",
		"build:node": "DEPLOY_ENV='node' npm run build",
		"build:static": "DEPLOY_ENV='static' npm run build",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:api": "vitest run --config tests/vitest.api.config.ts",
		"test:e2e": "playwright test",
		"i18n:check": "tsx scripts/check-translations.ts",
		"i18n:check:verbose": "tsx scripts/check-translations.ts --verbose",
		"i18n:find-hardcoded": "tsx scripts/find-hardcoded-text.ts",
		"hold-my-beer": "npm run format && npm run lint && npm run types && npm run check && npm run build-check && npm run test"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.2",
		"@codecov/rollup-plugin": "^1.9.1",
		"@eslint/js": "^9.36.0",
		"@playwright/test": "^1.55.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/adapter-vercel": "^6.0.0",
		"@sveltejs/kit": "^2.47.3",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.7.1",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.3",
		"globals": "^16.4.0",
		"jsdom": "^26.1.0",
		"lucide-svelte": "^0.542.0",
		"msw": "^2.11.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"sass-embedded": "^1.91.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tsx": "^4.20.6",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
